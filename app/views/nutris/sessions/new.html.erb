<h2>Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, name="Email" %><br />
    <%= f.email_field :email, id:"email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, name="Senha" %><br />
    <%= f.password_field :password, id:"password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, name="Lembrar Senha" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", id:"submit"%>
  </div>
<% end %>

<%= render "nutris/shared/links" %>
