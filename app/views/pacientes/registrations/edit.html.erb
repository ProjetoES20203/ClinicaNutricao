<h2>Editar Conta <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
  <%= render "pacientes/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, id: "email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, name="Senha" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, id: "password", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, name="Confirmar Senha" %><br/>
    <%= f.password_field :password_confirmation, id: "password_confirmation", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :nome %><br/>
    <%= f.text_field :nome, autofocus: true, id: "nome", autocomplete: "nome" %>
  </div>

  <div class="field">
    <%= f.label :cpf %><br/>
    <%= f.number_field :cpf, autofocus: true, id: "cpf", autocomplete: "cpf" %>
  </div>

  <div class="field">
    <%= f.label :altura %><br/>
    <%= f.number_field :altura, id: "altura", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :data_nascimento %><br/>
    <%= f.date_field :data_nascimento, id: "data_nascimento", autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar" %>
  </div>
<% end %>

<% if (nutri_signed_in?) %>
<h3>Cancel my account</h3>
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete %></p>
<% end %>
<%= link_to "Voltar", :back %>
